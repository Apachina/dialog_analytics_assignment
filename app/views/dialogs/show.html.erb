<h2><%= @dialog.name %></h2>

<div class="row">
  <div class="col-lg-4">
    <table class="table">
      <tr>
        <td scope="col">Duration</td><td class="text-left"><%= @dialog.duration %></td>
      </tr>
      <tr>
        <td scope="col">Total Pdrases</td><td class="text-left"><%=@dialog.phrases.length %></td>
      </tr>
      <tr>
        <td scope="col">Interruptions</td><td class="text-left"><%=@dialog.interruptions %></td>
      </tr>
      <tr>
        <td scope="col">Long breaks</td><td class="text-left"><%=@dialog.long_breaks %></td>
      </tr>
    </table>
    <hr>
  </div>

  <div class="col-lg-4">
    <div class="alert alert-danger" role="alert">This is interruption</div>
    <div class="alert alert-warning" role="alert">This is long break (more than 5 seconds)</div>
  </div>
</div>

<hr>

<% @phrases.each do |phrase| %>
  <%= phrase.colored_phrase %>
<% end %>
